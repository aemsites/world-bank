    {
      "title": "Curated Card",
      "id": "curated-card",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Curated Card",
              "model": "curated-card"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "curated-card",
      "fields": [
        {
          "component": "boolean",
          "label": "Use Dynamic Media Image",
          "name": "useDM",
          "value": "false",
          "valueType": "boolean"
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Image",
          "multi": false,
          "condition": { "===": [{"var" : "useDM"}, false] }
        },
        {
          "component": "text",
          "name": "imageAlt",
          "label": "Alt Text",
          "valueType": "string",
          "condition": { "===": [{"var" : "useDM"}, false] }
        },
        {
          "component": "custom-asset-namespace:custom-asset",
          "configUrl": "https://raw.githubusercontent.com/aemsites/world-bank/refs/heads/main/tools/asset-selector/image.config.json",
          "valueType": "string",
          "name": "cc_image",
          "label": "Dynamic Media Image",
          "multi": false,
          "condition": { "===": [{"var" : "useDM"}, true] }
        },
        {
          "component": "text",
          "name": "cc_imageText",
          "label": "Alt Text",
          "valueType": "string",
          "condition": { "===": [{"var" : "useDM"}, true] }
        },
        {
          "component": "boolean",
          "label": "Auto Smart Crop",
          "name": "cc_smartCrop",
          "value": "false",
          "valueType": "boolean",
          "condition": { "===": [{"var" : "useDM"}, true] }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "cc_queryparams",
          "label": "Image Query Params",
          "description": "Add custom query params to the image URL",
          "condition": { "===": [{"var" : "useDM"}, true] }
        },
        {
          "component": "aem-tag",
          "name": "curated-card-tags",
          "label": "Tags for Card",
          "valueType": "string",
          "rootPath": "/content/cq:tags/world-bank/content-type",
          "description": "Tags for the curated card",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "curated-card-title",
          "label": "Title",
          "description": "Sets the title of the Card",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "curated-card-description",
          "label": "Description",
          "description": "Sets the description of the Card"
        },
        {
          "component": "text",
          "name": "curated-card-link",
          "label": "Link",
          "valueType": "string"
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "cc-read-more-btn",
          "label": "Read More Label",
          "description": "Sets read more button label on first card",
          "required": false
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "curated-cards",
      "components": [
        "curated-card"
      ]
    }
  ]
}
